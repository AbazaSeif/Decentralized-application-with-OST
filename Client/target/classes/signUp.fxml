<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainController">
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username">
        <font>
          <Font size="14.0" />
        </font>
    </Text>
    <TextField fx:id="signUpUsername" alignment="CENTER" maxWidth="-Infinity">
        <VBox.margin>
          <Insets bottom="5.0" />
        </VBox.margin>
    </TextField>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email">
        <font>
          <Font size="14.0" />
        </font>
    </Text>
    <TextField fx:id="signUpEmail" maxWidth="-Infinity">
        <VBox.margin>
          <Insets bottom="5.0" />
        </VBox.margin>
    </TextField>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
        <font>
          <Font size="14.0" />
        </font>
    </Text>
    <PasswordField fx:id="signUpPassword" maxWidth="-Infinity">
        <VBox.margin>
          <Insets bottom="10.0" />
        </VBox.margin>
    </PasswordField>
   <HBox alignment="CENTER">
      <children>
          <Button fx:id="SignUpConfirm" mnemonicParsing="false" onAction="#reg" text="SignUp" textAlignment="CENTER">
            <HBox.margin>
               <Insets left="90.0" />
            </HBox.margin>
         </Button>
         <CheckBox fx:id="charityBox" mnemonicParsing="false" text="Charity">
            <HBox.margin>
               <Insets left="30.0" />
            </HBox.margin>
         </CheckBox>
      </children>
   </HBox>
</VBox>
